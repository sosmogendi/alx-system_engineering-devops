#!/usr/bin/env bash
# This script provides answers to questions about types of networks.

# Question 1
echo "What type of network a computer in local is connected to?"
echo "1. Internet"
echo "2. WAN"
echo "3. LAN"

# Provide the correct answer number
echo "Correct Answer: 3"

# Question 2
echo -e "\nWhat type of network could connect an office in one building to another office in a building a few streets away?"
echo "1. Internet"
echo "2. WAN"
echo "3. LAN"

# Provide the correct answer number
echo -e "\nCorrect Answer: 2"

# Question 3
echo -e "\nWhat network do you use when you browse www.google.com from your smartphone (not connected to the Wifi)?"
echo "1. Internet"
echo "2. WAN"
echo "3. LAN"

# Provide the correct answer number
echo -e "\nCorrect Answer: 1"

