#!/usr/bin/env bash

# Configure Nginx to run as the nginx user
sed -i 's/user www-data/user nginx/' /etc/nginx/nginx.conf

# Create a backup of the default site configuration
mv /etc/nginx/sites-available/default /etc/nginx/sites-available/default.backup

# Replace the default site configuration to listen on port 8080
echo "server {
    listen 8080;
    server_name _;

    location / {
        root /usr/share/nginx/html;
        index index.html;
    }
}" > /etc/nginx/sites-available/default

# Create a symbolic link to enable the default site configuration
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/

# Test Nginx configuration
nginx -t

# Restart Nginx to apply the changes
service nginx restart

# Verify Nginx is running as the nginx user
ps aux | grep 'nginx: worker process'
