#!/usr/bin/env bash
# This script displays "Best School" 10 times, but says "Hi" on the 9th iteration using a while loop and an if statement

# Counter variable
count=0

# While loop to display "Best School" 10 times
while [ $count -lt 10 ]; do
    if [ $count -eq 8 ]; then
        echo "Hi"
    else
        echo "Best School"
    fi
    ((count++))
done
